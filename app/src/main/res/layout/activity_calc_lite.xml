<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bottom_sheet"
    android:orientation="vertical"
    tools:context=".CalcLite">
    <include layout="@layout/actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">




        <TextView
            android:id="@+id/tv_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/light_white"
            android:gravity="center_vertical|end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textStyle="bold"
            android:paddingBottom="2.5dp"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_light"
            android:gravity="bottom|end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="2.5dp"
            android:textStyle="bold"
            android:text="0"
            android:textSize="60sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">


            <Button
                android:id="@+id/btn_clear_display"
                style="@style/operatorButtons"
                android:textSize="20sp"
                android:text="AC" />


            <ImageButton
                android:id="@+id/btn_delete"
                style="@style/operatorButtons"
                android:contentDescription="delete"
                android:src="@drawable/backspace_24"
                app:iconGravity="textStart"
                android:elevation="0dp"
                app:iconPadding="0dp"/>

            <Button
                android:id="@+id/btn_percentage"
                style="@style/operatorButtons"
                android:textSize="20sp"
                android:text="%" />

            <Button
                android:id="@+id/btn_division"
                style="@style/operatorButtons"
                android:contentDescription="division"
                android:text="÷" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/blue_inactive"
            android:orientation="horizontal"
            android:weightSum="100">



            <Button
                android:id="@+id/btn_7"
                style="@style/digitButtons"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/digitButtons"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/nineButton"
                android:text="9" />



            <Button
                android:id="@+id/btn_multiplication"
                style="@style/operatorButtons"
                android:textSize="18sp"
                android:text="x" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_4"
                style="@style/digitButtons"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/digitButtons"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/digitButtons"
                android:text="6" />


            <Button
                android:id="@+id/btn_submission"
                style="@style/operatorButtons"
                android:text="–" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button
                android:id="@+id/btn_1"
                style="@style/digitButtons"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/digitButtons"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/digitButtons"
                android:text="3" />

            <Button
                android:id="@+id/btn_sum"
                style="@style/operatorButtons"
                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_0"
                style="@style/digitButtons"
                android:text="0" />

            <Button
                android:id="@+id/btn_00"
                style="@style/digitButtons"
                android:textStyle="normal"
                android:text="00" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/digitButtons"
                android:contentDescription="dot"
                android:text="."
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/operatorButtons"
                android:fontFamily="@font/din"
                android:text="＝" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#39434d"
            tools:ignore="Suspicious0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/botton_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#15202b"
                app:itemIconTint="@color/navigation_color"
                app:itemTextColor="@color/navigation_color"
                app:menu="@menu/menu_item" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>